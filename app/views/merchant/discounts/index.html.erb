<h2>Discounts</h2>

<section class="discounts">
  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <p>Number of items needed: <%= discount.items_number %></p>
      <p>Percent off: <%= discount.percent_off %></p>
      <%= button_to "Show", "/merchant/discounts/#{discount.id}", method: :get %>
      <%= button_to "Edit", "/merchant/discounts/#{discount.id}/edit", method: :get %>
      <%= button_to 'Delete', "/merchant/discounts/#{discount.id}", method: :delete %>
    </section>
  <% end %>
</section>

<%= link_to "New Discount", '/merchant/discounts/new' %>
